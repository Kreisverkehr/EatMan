{{#dishes}}
<div class="modal fade" id="deleteConfirm{{id}}" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="deleteConfirmLabel">Löschen bestätigen</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="text-white">&times;</span>
        </button>
        </div>
        <div class="modal-body">
        Soll das Gericht "{{name}}" wirklich gelöscht werden?
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Nein</button>
        <a class="btn btn-danger" href="{{action_delete}}" role="button">Ja, löschen</a>
        </div>
    </div>
    </div>
</div>
{{/dishes}}